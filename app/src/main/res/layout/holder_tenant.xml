<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.example.propertymanagementapp.viewmodel.adapter.LoginBindingAdapter"/>
        <variable
            name="tenant"
            type="com.example.propertymanagementapp.api.response.Tenant" />
    </data>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding"
            android:layout_margin="@dimen/small_margin">
            <ImageView
                android:src="@drawable/ic_tenant_no_resource"
                android:id="@+id/ivImage"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_name"
                android:text="@{tenant.name}"
                android:layout_margin="@dimen/common_margin"
                app:layout_constraintTop_toTopOf="@id/ivImage"
                app:layout_constraintStart_toEndOf="@id/ivImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_margin="@dimen/common_margin"
                android:text="@{tenant.email}"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toEndOf="@id/ivImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_property"
                android:layout_margin="@dimen/common_margin"
                android:text="@{tenant.propertyId}"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                app:layout_constraintStart_toEndOf="@id/ivImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>